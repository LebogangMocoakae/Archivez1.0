        <Button Content="Add Record" HorizontalAlignment="Left" Margin="345,130,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <Button Content="Create New" HorizontalAlignment="Left" Margin="345,190,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <Button Content="Edit Scheme" HorizontalAlignment="Left" Margin="345,250,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <Button Content="View Records" HorizontalAlignment="Left" Margin="345,310,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <Button Content="Log Out" HorizontalAlignment="Left" Margin="345,370,0,0" VerticalAlignment="Top" Width="100" Height="30"/>

    </Grid>
</Window>
